version: '3.1'

services:
    web:
        image: registry.cn-hangzhou.aliyuncs.com/docker-dong/chain_tools:__shortsha__
        command: sanic main:app --host=0.0.0.0 --port=8000
        deploy:
            replicas: 2
        secrets:
            - db_password

    nginx:
        image: nginx
        ports:
            - 8000:80
        deploy:
            mode: global

    redis:
        image: redis
        deploy:
            replicas: 1

secrets:
    db_password:
        external: true